{{> bootstrap-lib}}
<link rel="stylesheet" href="/css/signin.css">
<link rel="stylesheet" href="/css/general.css">
<main class="h-100 w-100 d-flex align-items-center justify-content-center">
    <div class="h-100 w-75 d-flex align-items-center justify-content-center">
        <div class="w-50 blurred-container d-flex flex-column justify-content-center text-center" style="max-width: 600px;">
            <div class="d-block text-center fs-2 fw-bold mt-4 mb-4 user-select-none">Đăng Nhập</div>

            <form action="/users/login" method="post">
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <input type="text" class="form-control" id="account" aria-describedby="emailHelpId" placeholder="Email / Username" name="account" required />
                    </div>
                    <div class="col-md-12 mb-3">
                        <input class="form-control" type="password" placeholder="Password" name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters" required />
                    </div>
                    <div class="col-md-6">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="newaccount" name="keepSignedIn" checked />
                            <label class="custom-control-label" for="newaccount">Keep me
                                signed in</label>
                        </div>
                    </div>
                    <a href="/users/forgot" class="d-block text-end pe-4 p-2" style="text-decoration: none; color: black; font-style: italic;">Quên mật khẩu?</a>
                    <div class="g-recaptcha d-flex align-items-center justify-content-center" data-sitekey="{{sitekey}}"></div>
                    <br />

                    <button class="login-btn fs-5 mt-3" id="login-btn">Đăng nhập</button>
                    {{#if loginMessage }}
                    <div class="col-md-12">
                        <div class="p-3 mt-3 alert alert-danger">
                            {{{loginMessage}}}
                        </div>
                    </div>
                    {{/if}}
                    <input type="hidden" name="reqUrl" value="{{reqUrl}}" />
                </div>

            </form>


            <div class="separator d-flex justify-content-center align-items-center m-3">
                <div class="flex-fill ms-3 me-3">
                    <hr>
                </div>
                <span class="fw-bold fst-italic">Hoặc</span>
                <div class="flex-fill ms-3 me-3">
                    <hr>
                </div>
            </div>

            <div class="google-signin-btn container-fluid mb-2 d-flex flex-row align-items-center p-2" id="google-login-btn">
                <img src="/img/icons/google.png" style="height: 3em; width: 3em; cursor:pointer;" alt="Google logo">
                <span class="d-block">Tiếp tục với Google</span>
            </div>

            <div class="facebook-signin-btn container-fluid mb-4 d-flex flex-row align-items-center p-2" id="facebook-login-btn">
                <img src="/img/icons/facebook-color.png" class="p-2" style="height: 3em; width: 3em; cursor:pointer;" alt="Facebook logo">
                <span class="d-block">Tiếp tục với Facebook</span>
            </div>

            <div class="user-select-none">Chưa có tài khoản?</div>
            <a href="/users/register" class="signup-btn m-2">Đăng ký</a>
            <a href="/" class="stay-anony-btn mb-4">Hoặc tiếp tục ẩn danh</a>
        </div>
    </div>
</main>

<script src="/js/signin.js"></script>