{{> bootstrap-lib }}
<link rel="stylesheet" href="/css/forgot-password.css">
<link rel="stylesheet" href="/css/general.css">

<main class="h-75 w-100 d-flex align-items-center justify-content-center">
   <form action="/users/forgot" method="post">
     <div class="card text-center" style="width: 400px;">
        <div class="card-header h5 text-white bg-primary py-3">Quên mật khẩu</div>
        <div class="card-body px-5">

            <p class="card-text py-2 mt-2 mb-2 fw-bolder fs-5">
               Bước 1
            </p>

            <p class="card-text py-2 mt-1">
                Đầu tiên, cho chúng tôi biết email / username bạn đã đăng ký:
            </p>

            {{#if message}}
            <div class="alert alert-danger" role="alert">
                {{{message}}}
            </div>
            {{/if}}


            <div class="form-outline">
                <input type="text" class="form-control my-3" name="account" id="typeEmail" placeholder="Email / Username"/>
            </div>
            <button class="btn btn-primary w-100 mt-3">Tiếp tục</button>

            <div class="d-flex justify-content-between mt-4">
                <a class="fw-normal fs-6" href="/users/login">Đăng nhập</a>
                <a class="fw-normal fs-6" href="/users/register">Đăng ký</a>
            </div>

        </div>
    </div>
   </form>
</main>

