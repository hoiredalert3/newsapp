{{> bootstrap-lib }}

<link rel="stylesheet" href="/css/post.css" />
<link rel="stylesheet" href="/css/general.css" />

<main class="container mt-5">
    <div class="row g-5">
        <div class="offset-lg-2 offset-1 col-lg-6 col-md-8">
            {{#with post}}

            <article class="blog-post">
                <h2 class="blog-post-title">
                    {{title}}
                </h2>

                <img src="{{thumbnailUrl}}" class="img-fluid m-2" alt="Post thumbnail" />

                <div class="blog-post-meta d-flex align-items-center justify-content-between mb-3">
                    <a class="author" target="_blank" href="profile.html">
                        <i class="bi bi-person fs-2"></i>
                        <span> Author id: {{authorId}} </span>
                    </a>

                    <span class="">{{publishedAt}}</span>
                </div>

                <h3>Post:content here</h3>

                <div id="post-content">
                    {{content}}
                </div>

                <hr class="my-4" />

                <div class="category-container mb-3">
                    <h3 class="text-uppercase mb-3">Chuyên mục</h3>
                    <div class="categories row row-cols-4 gap-2">
                        <a href="/posts" class="btn btn-danger rounded-5" role="button">Nông sản
                        </a>
                    </div>
                </div>

                <div class="category-container mb-3">
                    <h3 class="text-uppercase mb-3">Danh sách nhãn</h3>
                    <div class="tags row row-cols-4 gap-2">
                        <a href="/posts" class="btn btn-danger rounded-5" role="button">Lúa gạo
                        </a>
                        <a href="/posts" class="btn btn-danger rounded-5" role="button">ĐBSCL
                        </a>
                        <a href="/posts" class="btn btn-danger rounded-5" role="button">Xuất khẩu
                        </a>

                        <a href="/posts" class="btn btn-danger rounded-5" role="button">Nông nghiệp
                        </a>
                    </div>
                </div>
            </article>
            {{/with}}

            <hr class="my-4" />

            <div class="related-posts">
                <h2>Bài viết liên quan</h2>
                <div class="row row-cols-2">
                    <div class="col mb-3">
                        <a href="post-1.html">
                            <img src="/img/post/thumbnail-medium.png" class="img-fluid mt-3"
                                alt="Machine harvesting paddy field" />
                            <h6 class="fw-bold">
                                Thúc đẩy xuất khẩu nông sản chính ngạch
                            </h6>
                        </a>

                        <div class="post-meta-data d-flex justify-content-between">
                            <a href="/posts">Nông sản</a>
                            <span>13/03/2023</span>
                        </div>
                    </div>

                    <div class="col mb-3">
                        <a href="post-1.html">
