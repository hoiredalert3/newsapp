{{> bootstrap-lib }}
<main class="container">
  <div class="d-flex" id="wrapper">
    {{> admin-nav}}


    <div id="page-content-wrapper" class="w-75">
      <div class="container-fluid px-md-5 px-0 m-5">
        <div class="row g-4 my-2">
          <div class="col-md-4">
            <h2 class="text-dark fw-bold fs-2 text-uppercase text-nowrap">
              Bài viết
            </h2>
          </div>

          <div class="offset-md-4 col-md-3">
            <!-- Button trigger modal -->
          </div>
        </div>

        <div class="row g-4 my-2">
          <div class="col">
            <div class="card border-primary mb-3">
              <div class="card-body">
                <span class="card-text fw-bold">Trái tim vàng</span>

                <button class="bg-transparent deny-post text-danger float-end mx-2">
                  Từ chối
                </button>
                <button data-bs-toggle="modal" data-bs-target="#publishPostModal"
                  class="bg-transparent text-success float-end mx-2">
                  Xuất bản
                </button>
                <a href="#" class="text-primary float-end mx-2">Xem chi tiết</a>
              </div>
            </div>

            <div class="card border-primary mb-3">
              <div class="card-body">
                <span class="card-text fw-bold">Thúc đẩy nông nghiệp ĐBSCL</span>

                <button class="bg-transparent deny-post text-danger float-end mx-2">
                  Từ chối
                </button>
                <button data-bs-toggle="modal" data-bs-target="#publishPostModal"
                  class="bg-transparent text-success float-end mx-2">
                  Xuất bản
                </button>
                <a href="#" class="text-primary float-end mx-2">Xem chi tiết</a>
              </div>
            </div>

            <div class="card border-primary mb-3">
              <div class="card-body">
                <span class="card-text fw-bold">Cà phê Tây nguyên bội thu</span>

                <button class="bg-transparent deny-post text-danger float-end mx-2">
                  Từ chối
                </button>
                <button data-bs-toggle="modal" data-bs-target="#publishPostModal"
                  class="bg-transparent text-success float-end mx-2">
                  Xuất bản
                </button>
                <a href="#" class="text-primary float-end mx-2">Xem chi tiết</a>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal for Publish Post -->
        <div class="modal fade" id="publishPostModal" tabindex="-1"
          aria-labelledby="exampleModalCenteredScrollableTitle" style="display: none" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header text-center">
                <h1 class="modal-title fs-5" id="exampleModalCenteredScrollableTitle">
                  Xác nhận xuất bản bài viết
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>

              <div class="modal-body">
                <p class="my-4">
                  Bạn có chắc chắn muốn xuất bản bài viết này?
                </p>
              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-danger">
                  Xuất bản
                </button>

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                  Hủy
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="row g-4 my-2">
          <div class="col-md-3"></div>

          <div class="col-md-3"></div>
        </div>
      </div>
    </div>
  </div>
</main>
{{> footer }}
<script>
  document.querySelectorAll(".deny-post").forEach((item) =>
    item.addEventListener("click", (e) => {
      if (confirm("Bạn có chắc chắn muốn từ chối viết này?")) {
        e.target.parentElement.parentElement.remove();
      }
    })
  );
</script>