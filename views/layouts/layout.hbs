<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- CSS -->
  {{!-- Note: Cái nào riêng của từng file thì đừng bỏ vào đây, tránh conflict --}}
  <link rel="stylesheet" href="/css/general.css" />

  <!-- Be Vietnam Pro, Noto Serif Display, Roboto -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800&family=Noto+Serif+Display:wght@400;500;600;700;800;900&family=Roboto:ital,wght@0,100;0,300;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet" />

  <script src="https://kit.fontawesome.com/525f113dce.js" crossorigin="anonymous"></script>

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css" />

  <link rel="shortcut icon" href="/img/logo/favicon1.png" type="image/x-icon" />
  <title>Báo mới Việt Nam</title>
</head>

<body>
  {{! Begin Header }}
  <header>
    <a href="/" class="header-child" id="logo-nav">
      <img src="/img/logo/news-logo.png" alt="" id="logo" />
    </a>
    <nav class="header-child">
      <div class="level-1">
        <a href="/posts?category=1">Thời sự</a>
        <div class="level-2">
          <div class="category">
            <h2>Thời sự</h2>
          </div>
          <div class="row">
            <div class="column">
              <a href="/posts">Chính trị</a>
              <a href="/posts">Dân sinh</a>
              <a href="/posts">Quyền được biết</a>
            </div>
            <div class="column">
              <a href="/posts">Quốc phòng</a>
              <a href="/posts">Thời luận</a>
              <a href="/posts">Pháp luật</a>
            </div>
            <div class="column">
              <a href="/posts">Lao động</a>
              <a href="/posts">Việc làm</a>
              <a href="/posts">Phóng sự / Điều tra</a>
            </div>
          </div>
        </div>
      </div>

      <div class="level-1">
        <a href="/posts?category=2">Thế giới</a>
        <div class="level-2">
          <div class="category">
            <h2>Thế giới</h2>
          </div>
          <div class="row">
            <div class="column">
              <a href="/posts">Kinh tế thế giới</a>
              <a href="/posts">Góc nhìn</a>
              <a href="/posts">Người Việt năm châu</a>
            </div>
            <div class="column">
              <a href="/posts">Quân sự</a>
              <a href="/posts">Hồ sơ</a>
              <a href="/posts">Chuyện lạ</a>
            </div>
          </div>
        </div>
      </div>

      <div class="level-1">
        <a href="/posts?category=3">Kinh tế</a>
        <div class="level-2">
          <div class="category">
            <h2>Kinh tế</h2>
          </div>
          <div class="row">
            <div class="column">
              <a href="/posts">Kinh tế xanh</a>
              <a href="/posts">Ngân hàng</a>
              <a href="/posts">Doanh nghiệp</a>
            </div>
            <div class="column">
              <a href="/posts">Làm giàu</a>
              <a href="/posts">Chính sách - phát triển</a>
              <a href="/posts">Chứng khoáng</a>
            </div>
            <div class="column">
              <a href="/posts">Doanh nhân</a>
              <a href="/posts">Địa ốc</a>
            </div>
          </div>
        </div>
      </div>

      <div class="level-1">
        <a href="/posts?category=4">Giáo dục</a>
        <div class="level-2">
          <div class="category">
            <h2>Giáo dục</h2>
          </div>
          <div class="row">
            <div class="column">
              <a href="/posts">Tuyển sinh</a>
              <a href="/posts">Du học</a>
              <a href="/posts">Phụ huynh</a>
            </div>
            <div class="column">
              <a href="/posts">Chọn nghề - chọn trường</a>
              <a href="/posts">Cẩm nang tuyển sinh 2023</a>
              <a href="/posts">Nhà trường</a>
            </div>
          </div>
        </div>
      </div>

      <div class="level-1">
        <a href="/posts?category=5">Du lịch</a>
        <div class="level-2">
          <div class="category">
            <h2>Du lịch</h2>
          </div>
          <div class="row">
            <div class="column">
              <a href="/posts">Khám phá</a>
              <a href="/posts">Chơi gì, ăn đâu, đi thế nào</a>
              <a href="/posts">Câu chuyện du lịch</a>
            </div>
            <div class="column">
              <a href="/posts">Tin tức sự kiện</a>
              <a href="/posts">Bất động sản du lịch</a>
            </div>
          </div>
        </div>
      </div>

      <div class="level-1">
        <a href="/posts?category=6">Sức khỏe</a>
        <div class="level-2">
          <div class="category">
            <h2>Sức khỏe</h2>
          </div>
          <div class="row">
            <div class="column">
              <a href="/posts">Khỏe đẹp mỗi ngày</a>
              <a href="/posts">Làm đẹp</a>
            </div>
            <div class="column">
              <a href="/posts">Niềm tin vào y đức</a>
              <a href="/posts">Giới tính</a>
            </div>
          </div>
        </div>
      </div>

      <div class="level-1">
        <a href="/posts?category=7">Văn hóa</a>
        <div class="level-2">
          <div class="category">
            <h2>Văn hóa</h2>
          </div>
          <div class="row">
            <div class="column">
              <a href="/posts">Câu chuyện văn hóa</a>
              <a href="/posts">Xem - nghe</a>
            </div>
            <div class="column">
              <a href="/posts">Khảo cứu</a>
              <a href="/posts">Sống đẹp</a>
            </div>
          </div>
        </div>
      </div>

    </nav>

    <div class="header-child">

      <!-- Guest  -->
      <div class="template-user--header">
        <button id="sign-in-btn">
          <span>
            Đăng nhập
          </span>
        </button>
      </div>

      <!-- Unsubcriber -->
      <div class="template-user--header current-user--header">
        <a href="#">
          <img src="/img/icons/unsubscriber.png" class="img-subscribe-icon--header" alt="" />
        </a>
        <a href="/profile">
          <div class="dropdown  username-header">
            <button class="dropbtn username--header">Username</button>
            <div class="dropdown-content">
              <a href="/profile">Xem trang cá nhân</a>
              <a href="/signin">Đăng xuất</a>
            </div>
          </div>
        </a>
        <a href="/profile">
          <img src="/img/icons/user.png" class="img-avatar img-avatar--header" alt="" />
        </a>
      </div>

      <!-- Subscriber -->
      <div class="template-user--header">
        <a href="#">
          <img src="/img/icons/subscriber.png" class="img-subscribe-icon--header" alt="" />
        </a>

        <a href="/profile">
          <div class="dropdown  username-header">
            <button class="dropbtn username--header">Username</button>
            <div class="dropdown-content">
              <a href="/signin">Đăng xuất</a>
            </div>
          </div>
        </a>

        <a href="/profile">
          <img src="/img/icons/user.png" class="img-avatar img-avatar--header" alt="" />
        </a>
      </div>

      <!-- Writer -->
      <div class="template-user--header">
        <a href="#">
          <img src="/img/icons/writter.png" class="img-subscribe-icon--header" alt="" />
        </a>
        <a href="/profile">
          <p class="username username-header">Username</p>
        </a>
        <a href="/profile">
          <img src="/img/icons/user.png" class="img-avatar img-avatar--header" alt="" />
        </a>
      </div>
      <!-- Editor  -->
      <div class="template-user--header">
        <a href="#">
          <img src="/img/icons/editor.png" class="img-subscribe-icon--header" alt="" />
        </a>
        <a href="/profile">
          <p class="username username-header">Username</p>
        </a>
        <a href="/profile">
          <img src="/img/icons/user.png" class="img-avatar img-avatar--header" alt="" />
        </a>
      </div>
      <!-- Administrator -->
      <div class="template-user--header">
        <a href="#">
          <img src="/img/icons/administrator.png" class="img-subscribe-icon--header" alt="" />
        </a>
        <a href="/profile">
          <p class="username username-header">Username</p>
        </a>
        <a href="/profile">
          <img src="/img/icons/user.png" class="img-avatar img-avatar--header" alt="" />
        </a>
      </div>
    </div>
  </header>
  {{! End Header }}

  {{! Begin Body }}
  {{{body}}}
  {{! End Body }}

  {{! End Footer }}
</body>

<script src="/js/general.js"></script>

</html>