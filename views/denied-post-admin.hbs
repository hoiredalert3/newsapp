<link rel="stylesheet" href="/css/denied-post-editor.css" />

<main>
    {{#with post}}
    <form method="get" action="/admin/posts">
        <div class="title">
            Bài viết từ chối:
            {{id}}.
        </div>
        <div class="category_label--container">
            <div class="review--container">
                <div class="small-review--container">
                    <div class="small-item--container">
                        <div class="small-title">
                            Chuyên mục
                        </div>
                        {{#with category}}
                        <div class="small-content">
                            {{title}}
                        </div>
                        {{/with}}
                    </div>

                    <div class="check--container" style="opacity: 0;">
                        <button onclick="hideComment(0)" class="approval-btn" type="button" disabled>
                            <img src="/img/icons/check-mark.png" alt="" />
                            <p>
                                Chấp thuận
                            </p>
                        </button>
                        <button onclick="displayComment(0)" class="denied-btn" type="button" disabled>
                            <img src="/img/icons/delete.png" alt="" />
                            <p>
                                Từ chối
                            </p>
                        </button>
                    </div>
                </div>
                <p class="title-deny">Lý do từ chối:</p>
                {{#with rejectedInfo}}
                <textarea name="categoryComment" id="category-comment" class="comment" readonly>{{categoryComment}}</textarea>
                {{/with}}
            </div>
            {{! Tag }}
            <div class="review--container">
                <div class="small-review--container">
                    <div class="small-item--container">
                        <div class="small-title">
                            Nhãn
                        </div>

                        <div class="small-content--no_border">
                            {{#each tags}}
                            <div class="label--container">
                                <a href="#">
                                    {{title}}
                                </a>
                            </div>
                            {{/each}}
                        </div>

                    </div>
                    <div class="check--container" style="opacity: 0;">
                        <button onclick="hideComment(1)" class="approval-btn" type="button" disabled>
                            <img src="/img/icons/check-mark.png" alt="" />
                            <p>
                                Chấp thuận
                            </p>
                        </button>
                        <button onclick="displayComment(1)" class="denied-btn" type="button" disabled>
                            <img src="/img/icons/delete.png" alt="" />
                            <p>
                                Từ chối
                            </p>
                        </button>
                    </div>
                </div>
                <p class="title-deny">Lý do từ chối:</p>
                {{#with rejectedInfo}}
                <textarea name="tagComment" id="category-comment" class="comment" cols="0" rows="2"
                readonly>{{tagComment}}</textarea>
                {{/with}}
            </div>
        </div>

        {{! Title }}
        <div class="review--container">
            <div class="big-review--container">
                <div class="big-review--head">
                    <div class="small-title">
                        Tiêu đề
                    </div>
                    <div class="check--container" style="opacity: 0;">
                        <button onclick="hideComment(2)" class="approval-btn" type="button" disabled>
                            <img src="/img/icons/check-mark.png" alt="" />
                            <p>
                                Chấp thuận
                            </p>
                        </button>
                        <button onclick="displayComment(2)" class="denied-btn" type="button" disabled>
                            <img src="/img/icons/delete.png" alt="" />
                            <p>
                                Từ chối
                            </p>
                        </button>
                    </div>
                </div>
                <div class="big-content">
                    {{title}}
                </div>
            </div>
            <p class="title-deny">Lý do từ chối:</p>
            {{#with rejectedInfo}}
            <textarea name="titleComment" id="category-comment" class="comment" cols="0" rows="2"
             readonly>{{titleComment}}</textarea>
            {{/with}}
        </div>

        {{! Abstract }}
        <div class="review--container">
            <div class="big-review--container">
                <div class="big-review--head">
                    <div class="small-title">
                        Tóm tắt
                    </div>
                    <div class="check--container" style="opacity: 0;">
                        <button onclick="hideComment(3)" class="approval-btn" type="button" disabled>
                            <img src="/img/icons/check-mark.png" alt="" />
                            <p>
                                Chấp thuận
                            </p>
                        </button>
                        <button onclick="displayComment(3)" class="denied-btn" type="button" disabled>
                            <img src="/img/icons/delete.png" alt="" />
                            <p>
                                Từ chối
                            </p>
                        </button>
                    </div>
                </div>
                <div class="big-content">
                    {{summary}}
                </div>
            </div>
            <p class="title-deny">Lý do từ chối:</p>
            {{#with rejectedInfo}}
            <textarea name="summaryComment" id="category-comment" class="comment" cols="0" rows="2"
            readonly>{{abstractComment}}</textarea>
            {{/with}}
        </div>
        {{! Content }}
        <div class="review--container">
            <div class="big-review--container">
                <div class="big-review--head">
                    <div class="small-title">
                        Nội dung
                    </div>
                    <div class="check--container" style="opacity: 0;">
                        <button onclick="hideComment(4)" class="approval-btn" type="button" disabled>
                            <img src="/img/icons/check-mark.png" alt="" />
                            <p>
                                Chấp thuận
                            </p>
                        </button>
                        <button onclick="displayComment(4)" class="denied-btn" type="button" disabled>
                            <img src="/img/icons/delete.png" alt="" />
                            <p>
                                Từ chối
                            </p>
                        </button>
                    </div>
                </div>
                <div class="big-content">
                    {{{content}}}
                </div>
            </div>
            <p class="title-deny">Lý do từ chối:</p>
            {{#with rejectedInfo}}
            <textarea name="contentComment" id="category-comment" class="comment" cols="0" rows="2"
             readonly>{{contentComment}}</textarea>
            {{/with}}
        </div>

        <input type="text" name="postStatus" value="3" hidden readonly />
        <div class="btns-container">
            <button class="submit-btn">
                Quay về
            </button>
        </div>
    </form>
    {{/with}}
</main>

<script src="/js/denied-post-editor.js"></script>